<!DOCTYPE html>
<html>
  <head>
    <script type="text/javascript" src ="/Content/js/jquery-3.1.0.js"></script>
    <script type="text/javascript" src= "/Content/js/scripts.js"></script>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>@Model.title</h2>
    <hr>
    <h3>Info</h3>
    <ul>
      <li>Collection: @Model.collection</li>
      <li>Call Number: @Model.call_number</li>
    </ul>
    <hr>
    <h3>Copies</h3>
    <ul>
      @foreach(var copy in Model.GetCopies())
      {
        <li><a href="/copies/@copy.id">Copy Number: @copy.id</a></li>
      }
    </ul>
    <form action="/copies/new" method="post">
      <input type="text" hidden="hidden" name="book_id" value="@Model.id">
      <button type="submit" name="button">Add New Copy</button>
    </form>
    <hr>
    <h3>Edit Book</h3>
    <form action="/books/edit/@Model.id" method="post">
      <input type="hidden" name="_method" value="PATCH">
      <label for="title">Title:</label>
      <input type="text" name="title" value="">
      <br>
      <label for="collection">Collection</label>
      <input type="text" name="collection" maxlength="6" value="">
      <br>
      <label for="callNumber">Call Number:</label>
      <input type="text" name="callNumber" value="">
      <br>
      <div class="author">
        <label for="author0">Author Name:</label>
        <input type="text" name="author0" value="">
      </div>
      <button class="append" type = "button">Add New Author</button>
      <button type="submit" name="button">Submit book</button>
      <input class = "form-control"  id="number-of-authors" name= "number-of-authors"  type="number" required="true" value=1 hidden="hidden">
    </form>
  </body>
</html>
